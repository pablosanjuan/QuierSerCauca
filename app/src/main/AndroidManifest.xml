<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sebastian.quierosercauca" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controllers.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.PrincipalActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controllers.RegistroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <activity
                android:name=".controllers.SplashActivity"
                android:label="@string/app_name"
                android:screenOrientation="portrait" >
            </activity>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".controllers.MapaActivity"
            android:label="@string/title_activity_mapa" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".controllers.InformacionActivity"
            android:label="@string/title_activity_informacion" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".controllers.AyudaActivity"
            android:label="@string/title_activity_informacion" >
        </activity>
    </application>

</manifest>
