<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/paisaje"
        tools:context="com.example.pablosanjuan.core.controlers.Registro">
        <ScrollView
            android:background="#EEffffff"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_informacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informaci칩n Personal"
            android:textSize="@dimen/elemento_text_size"
            android:textColor="@color/md_blue_800"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_nombre_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_apellido_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/edt_edad_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"/>
        <TextView
            android:id="@+id/txt_residencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Residencia"
            android:textColor="@color/md_blue_800"
            android:textSize="@dimen/elemento_text_size"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_pais_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pais"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_departamento_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departamento"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/edt_municipio_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Municipio"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/edt_correo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"/>
        <TextView
            android:id="@+id/txt_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sesi칩n"
            android:textColor="@color/md_blue_800"
            android:textSize="@dimen/elemento_text_size"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_usuario_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/edt_contrase침a_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@color/md_white_1000"
                android:background="@color/md_blue_800"
                android:id="@+id/btn_grdr_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Guardar"/>
            <Button
                android:onClick="onClick"
                android:id="@+id/btn_hacia_loguin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atras"
                android:textColor="@color/md_blue_800"
                android:layout_toLeftOf="@+id/btn_grdr_registro"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</FrameLayout>
